<Page
    x:Class="WorldSkillsYachts.Views.Pages.PageBoats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WorldSkillsYachts.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PageBoats"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <DataGrid x:Name="BoatGrid">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Model}"
                        Header="Модель" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding BoatType}"
                        Header="Тип лодки" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding NumberOfRowers}"
                        Header="Количество мест для гребцов" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Mast}"
                        Header="Mast" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Colour}"
                        Header="Цвет" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Wood}"
                        Header="Дерево" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding BasePrice, StringFormat=0.00, ConverterCulture='ru-Ru'}"
                        Header="Базовая цена" />
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding VAT}"
                        Header="Налог" />
                    <DataGridTemplateColumn Width="auto">
                        <DataGridTemplateColumn.Header>
                            <Label>Действия</Label>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Width="150"
                                        Click="EditButton_Click"
                                        Content="Редактировать"
                                        Style="{DynamicResource SmallButton}" />
                                    <Button
                                        Click="RemoveButton_Click"
                                        Content="Удалить"
                                        Style="{DynamicResource SmallButton}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#FF009FDA" />
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </ScrollViewer>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="AddButton"
                Click="AddButton_Click"
                Content="Добавить"
                Style="{DynamicResource SmallButton}" />
            <Button
                x:Name="ChangePriceButton"
                Width="200"
                Click="ChangePriceButton_Click"
                Content="Групповое изменение цен"
                Style="{DynamicResource SmallButton}" />
        </StackPanel>
    </Grid>
</Page>